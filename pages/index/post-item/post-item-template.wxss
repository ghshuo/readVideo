.post_coantion {
    display: flex;
    flex-direction: column;
    margin-top: 20rpx;
    margin-bottom: 40rpx;
    background-color: #fff;
    border-bottom: 1px solid #dedede;
    padding-bottom: 29rpx;
}

.post_author {
    margin: 10rpx 0 20rpx 20rpx;
}

.post_author image {
    width: 60rpx;
    height: 60rpx;
    vertical-align: middle;
}

.post_author text {
    margin-left: 20rpx;
    vertical-align: middle;
    margin-bottom: 5px;
    font-size: 26rpx;
}

.post_title {
    font-size: 34rpx;
    font-weight: bold;
    color: #333;
    margin-bottom: 10px;
    margin-left: 10px;
}

.post_image {
    margin-left: 16px;
    width: 100%;
    height: 340rpx;
    margin: 0 auto;
    margin-bottom: 15px;
}

.post_content {
    color: #666;
    font-size: 28rpx;
    margin-bottom: 20rpx;
    margin-left: 20rpx;
    letter-spacing: 2rpx;
    line-height: 40rpx;
}

.post_like {
    font-size: 13rpx;
    flex-direction: row;
    line-height: 16rpx;
    margin-left: 10px;
}

.post_like_image {
    height: 16px;
    width: 16px;
    margin-right: 8px;
    vertical-align: middle;
}

.post_like_font {
    vertical-align: middle;
    margin-right: 20px;
    font-size: 24rpx;
}
